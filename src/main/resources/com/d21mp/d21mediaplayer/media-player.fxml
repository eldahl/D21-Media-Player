<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<VBox fx:id="rootVBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.d21mp.d21mediaplayer.MediaPlayerController">
   <children>
      <MenuBar fx:id="menuBar">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#openFile" text="Open" />
              <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
                  <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="View">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#toggleSearchPlaylistView" text="Search / Playlist" />
                  <RadioMenuItem fx:id="lightmode" mnemonicParsing="false" onAction="#toggleLightMode" text="Enable light mode" />
                  <RadioMenuItem fx:id="darkmode" mnemonicParsing="false" onAction="#toggleDarkMode" text="Enable dark mode" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Playlist">
            <items>
                  <MenuItem mnemonicParsing="false" text="Open playlist" />
              <MenuItem mnemonicParsing="false" onAction="#createPlaylist" text="Create playlist" />
                  <MenuItem mnemonicParsing="false" text="Edit playlist" />
                  <MenuItem mnemonicParsing="false" text="Delete playlist" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
      <HBox VBox.vgrow="SOMETIMES">
         <children>
            <VBox HBox.hgrow="SOMETIMES">
               <children>
                  <VBox fx:id="mediaViewVBox" alignment="CENTER" maxHeight="2000.0" maxWidth="2000.0" minHeight="90.0" minWidth="160.0" VBox.vgrow="SOMETIMES">
                     <children>
                        <MediaView fx:id="mediaView" fitHeight="${mediaViewVBox.height}" fitWidth="${mediaViewVBox.width}" onMouseClicked="#buttonPlayPause">
                           <cursor>
                              <Cursor fx:constant="DEFAULT" />
                           </cursor>
                        </MediaView>
                     </children>
                  </VBox>
                  <Slider fx:id="sliderTime" majorTickUnit="10.0" minorTickCount="10" onMouseDragged="#sliderTimeDragging" onMousePressed="#mpPause" onMouseReleased="#mpPlay" snapToTicks="true" />
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Button fx:id="playPauseBut" mnemonicParsing="false" onAction="#buttonPlayPause" prefHeight="25.0" prefWidth="80.0" text="Pause">
                           <HBox.margin>
                              <Insets right="6.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="stopBut" mnemonicParsing="false" onAction="#buttonStop" text="Stop">
                           <HBox.margin>
                              <Insets right="6.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="skipBackwardBut" mnemonicParsing="false" onAction="#buttonSkipBack" text="Backward">
                           <HBox.margin>
                              <Insets right="6.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="skipForwardBut" mnemonicParsing="false" onAction="#buttonSkipForward" text="Forward">
                           <HBox.margin>
                              <Insets right="6.0" />
                           </HBox.margin>
                        </Button>
                        <Region HBox.hgrow="ALWAYS" />
                        <VBox alignment="CENTER">
                           <HBox.margin>
                              <Insets left="6.0" right="6.0" />
                           </HBox.margin>
                           <children>
                              <Slider fx:id="sliderVolume" onMouseDragged="#sliderVolume" prefWidth="100.0" value="100.0" />
                              <Label fx:id="labelTime" text="0%    Vol.    100%" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            <VBox fx:id="searchPlaylistView" minWidth="250.0">
               <children>
                  <HBox maxHeight="25.0" VBox.vgrow="SOMETIMES">
                     <children>
                        <TextField fx:id="searchField" focusTraversable="false" promptText="Search" HBox.hgrow="SOMETIMES" />
                        <Button mnemonicParsing="false" text="Search" />
                     </children>
                  </HBox>
                  <ScrollPane VBox.vgrow="SOMETIMES">
                     <content>
                        <VBox />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
