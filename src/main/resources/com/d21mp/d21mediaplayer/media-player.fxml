<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<VBox fx:id="rootVBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.d21mp.d21mediaplayer.MediaPlayerController">
   <children>
      <HBox>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <MenuBar fx:id="menuBar" prefHeight="26.0" prefWidth="194.0" style="-fx-background-radius: 0;" HBox.hgrow="ALWAYS">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#openFile" text="Open" />
                    <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
                        <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="View">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#toggleSearchPlaylistView" text="Search / Playlist" />
                        <RadioMenuItem fx:id="darkmode" mnemonicParsing="false" onAction="#toggleDarkMode" text="Dark mode" />
                        <RadioMenuItem fx:id="maximize" mnemonicParsing="false" onAction="#maximize" text="Maximize" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Playlist">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#openPlaylist" text="Open playlist" />
                    <MenuItem mnemonicParsing="false" onAction="#createPlaylist" text="Create playlist" />
                        <MenuItem mnemonicParsing="false" onAction="#deletePlaylist" text="Delete playlist" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Help">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#about" text="About" />
                     </items>
                  </Menu>
              </menus>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
            </MenuBar>
            <MenuBar onMouseDragged="#drag" onMousePressed="#presDrag" prefHeight="26.0" prefWidth="344.0" style="-fx-background-radius: 0;" HBox.hgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="MOVE" />
               </cursor>
            </MenuBar>
         </children>
      </HBox>
      <HBox VBox.vgrow="SOMETIMES">
         <children>
            <VBox HBox.hgrow="SOMETIMES">
               <children>
                  <VBox fx:id="mediaViewVBox" alignment="CENTER" maxHeight="2000.0" maxWidth="2000.0" minHeight="90.0" minWidth="160.0" style="-fx-background-radius: 0;" VBox.vgrow="SOMETIMES">
                     <children>
                        <MediaView fx:id="mediaView" fitHeight="${mediaViewVBox.height}" fitWidth="${mediaViewVBox.width}" onMouseClicked="#buttonPlayPause">
                           <cursor>
                              <Cursor fx:constant="DEFAULT" />
                           </cursor>
                        </MediaView>
                     </children>
                  </VBox>
                  <Slider fx:id="sliderTime" majorTickUnit="10.0" minorTickCount="10" onMouseDragged="#sliderTimeDragging" onMousePressed="#mpPause" onMouseReleased="#mpPlay" snapToTicks="true" />
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Button fx:id="playPauseBut" mnemonicParsing="false" onAction="#buttonPlayPause" style="-fx-background-radius: 0;">
                           <HBox.margin>
                              <Insets right="6.0" />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button fx:id="stopBut" mnemonicParsing="false" onAction="#buttonStop" style="-fx-background-radius: 0;">
                           <HBox.margin>
                              <Insets right="6.0" />
                           </HBox.margin>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button fx:id="skipBackwardBut" mnemonicParsing="false" onAction="#playPrevious" style="-fx-background-radius: 0;">
                           <HBox.margin>
                              <Insets right="6.0" />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button fx:id="skipForwardBut" mnemonicParsing="false" onAction="#playNext" style="-fx-background-radius: 0;">
                           <HBox.margin>
                              <Insets right="6.0" />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button fx:id="loopButton" mnemonicParsing="false" onAction="#loop" style="-fx-background-radius: 0;">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Button fx:id="shuffleButton" mnemonicParsing="false" onAction="#shufflePlaylist" style="-fx-background-radius: 0;">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Region HBox.hgrow="ALWAYS" />
                        <VBox alignment="CENTER">
                           <HBox.margin>
                              <Insets left="6.0" right="6.0" />
                           </HBox.margin>
                           <children>
                              <Slider fx:id="sliderVolume" onMouseDragged="#sliderVolume" prefWidth="100.0" value="100.0" />
                              <Label fx:id="labelTime" text="0%    Vol.    100%" />
                           </children>
                        </VBox>
                        <Button fx:id="muteButton" mnemonicParsing="false" onAction="#mute" style="-fx-background-radius: 0;">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            <VBox fx:id="searchPlaylistView" minWidth="250.0">
               <children>
                  <HBox maxHeight="25.0" VBox.vgrow="SOMETIMES">
                     <children>
                        <TextField fx:id="searchField" focusTraversable="false" prefHeight="26.0" prefWidth="249.0" promptText="Search" style="-fx-background-radius: 0;" HBox.hgrow="SOMETIMES" />
                        <Button mnemonicParsing="false" style="-fx-background-radius: 0;" text="Search">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></Button>
                     </children>
                  </HBox>
                  <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="SOMETIMES">
                     <content>
                        <VBox>
                           <children>
                              <ListView fx:id="listview" editable="true" onMouseClicked="#playSongFromPlaylist" prefHeight="200.0" prefWidth="249.0" style="-fx-background-radius: 0;" />
                              <HBox fx:id="lowerHBox" alignment="CENTER_LEFT">
                                 <children>
                                    <Button fx:id="addToPlaylist" mnemonicParsing="false" onAction="#addSongToPlaylistViaButton" style="-fx-background-color: lightgreen; -fx-background-radius: 0;">
                                       <cursor>
                                          <Cursor fx:constant="HAND" />
                                       </cursor></Button>
                                    <Button fx:id="removeFromPlaylist" mnemonicParsing="false" onAction="#removeSongFromPlaylistViaButton" style="-fx-background-color: pink; -fx-background-radius: 0;">
                                       <cursor>
                                          <Cursor fx:constant="HAND" />
                                       </cursor></Button>
                                    <Label text=" Current playlist: " />
                                    <Label fx:id="currentPlaylist" />
                                 </children>
                              </HBox>
                           </children></VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
   </padding>
</VBox>
